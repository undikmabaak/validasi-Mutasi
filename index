<script>
    const BASE_GAS_URL = "https://script.google.com/macros/s/AKfycbzQzECY5gqo-heP8kRUekQbWhkny_OnkGiN6iayhi3qt-TlP9D7ioq10rad6mt4JVQ/exec"; // HANYA URL GAS
